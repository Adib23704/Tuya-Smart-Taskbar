{
  "name": "tuya-smart-taskbar",
  "version": "1.0.2",
  "private": true,
  "description": "Taskbar App for controlling Tuya Smart Switches",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "node build.js",
    "build:windows": "node build.js --windows",
    "build:macos": "node build.js --macos",
    "build:linux": "node build.js --linux",
    "build:all": "node build.js --all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "nodemon --exec electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adib23704/Tuya-Smart-Taskbar.git"
  },
  "author": "Adib23704",
  "email": "adib23704@gmail.com",
  "url": "https://adib.lol",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-dmg": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@eslint/js": "^9.11.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "eslint": "^9.11.1",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "@tuya/tuya-connector-nodejs": "^2.1.2"
  },
  "nodemonConfig": {
    "events": {
      "start": "cls || clear"
    },
    "ext": "js,html"
  }
}